{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": false,
    "paths": {
      "_*": ["src/*"]
    },
    "experimentalDecorators": true
  },
  "exclude": ["dist"]
}
